{% if orders %}
    <div id="ordersTable">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Name</th>
                <th>Status</th>
                <th>Created At</th>
                <th>Updated At</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr class="t{{ order.id }}">
                    <td class="order-name">{{ order.name }}</td>
                    <td class="order-status">{{ order.status.toString() }}</td>
                    <td class="order-createAt">{{ order.createdAt | date('m/d/Y g:i A') }}</td>
                    <td class="order-updatedAt">{{ order.updatedAt | date('m/d/Y g:i A') }}</td>
                    <td>
                        <div class="d-flex flex-">
                            <form action="/orders/{{ order.id }}" method="post">
                                {{ csrf.fields | raw }}
                                <input type="hidden" name="_METHOD" value="DELETE"/>
                                <button type="submit" class="btn btn-outline-primary">
                                    <i class="bi bi-trash3-fill"></i>
                                </button>
                            </form>
                            <button class="ms-2 btn btn-outline-primary edit-order-btn"
                                    data-id="{{ order.id }}">

                                <i class="bi bi-pencil-fill"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endif %}