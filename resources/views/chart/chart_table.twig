{% if chartItems %}
    <div id="ordersTable">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for chartItem in chartItems %}
                <tr class="t{{ chartItem.id }}">
                    <td class="order-name">{{ chartItem.printingModel.originalName }}</td>
                    <td class="order-status flex">

                        <button class="btn btn-danger">
                            <b>-</b>
                        </button>

                        <span>{{ chartItem.quantity }}</span>

                        <button class="btn btn-success">
                            <b>+</b>
                        </button>

                        </form>
                    </td>
                    <td class="order-createAt">{{ chartItem.createdAt | date('m/d/Y g:i A') }}</td>
                    <td>
                        <div class="d-flex flex-">
                            <form action="/chart/{{ chartItem.id }}" method="post">
                                {{ csrf.fields | raw }}
                                <input type="hidden" name="_METHOD" value="DELETE"/>
                                <button type="submit" class="btn btn-outline-primary">
                                    <i class="bi bi-trash3-fill"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endif %}
