<div class="modal fade" id="editOrderModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Order</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-outline form-white mb-4">
                    note (required)
                    <input type="text" name="name" required
                           class="form-control form-control-lg"
                           placeholder="Order Name"/>

                    <label for="status">order status:</label>
                    <select id="status" name="status" class="form-control form-control-lg">
                        <option value="{{ constant('App\\Enum\\OrderStatus::UNPAID').toString }}">{{ constant('App\\Enum\\OrderStatus::UNPAID').toString }}</option>
                        <option value="{{ constant('App\\Enum\\OrderStatus::PENDING').toString }}">{{ constant('App\\Enum\\OrderStatus::PENDING').toString }}</option>
                        <option value="{{ constant('App\\Enum\\OrderStatus::PAID').toString }}">{{ constant('App\\Enum\\OrderStatus::PAID').toString }}</option>
                        <option value="{{ constant('App\\Enum\\OrderStatus::IS_PRINTING').toString }}">{{ constant('App\\Enum\\OrderStatus::IS_PRINTING').toString }}</option>
                        <option value="{{ constant('App\\Enum\\OrderStatus::TO_PICK_UP').toString }}">{{ constant('App\\Enum\\OrderStatus::TO_PICK_UP').toString }}</option>
                        <option value="{{ constant('App\\Enum\\OrderStatus::CANCELED').toString }}">{{ constant('App\\Enum\\OrderStatus::CANCELED').toString }}</option>
                    </select>

                    <label for="payment-status">payment status:</label>
                    <select id="payment-status" name="payment-status" class="form-control form-control-lg">
                        <option value="false">false</option>
                        <option value="true">true</option>
                    </select>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>
                    Close
                </button>
                <button type="button" class="btn btn-success save-order-btn">
                    <i class="bi bi-check-circle me-1"></i>
                    Save
                </button>
            </div>
        </div>
    </div>
</div>
